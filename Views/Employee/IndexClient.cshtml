@model IEnumerable<WebApp.Models.Employees>

@{
    ViewData["Title"] = "Index";
}

<div class="row">

<div class="col-xs-2 col-sm-2 col-md-3 col-lg-3 push-left">

    <div class="sidebar-nav">
      <div class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <span class="visible-xs navbar-brand">Sidebar menu</span>
        </div>
        <div class="navbar-collapse collapse sidebar-navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a>Поиск</a></li>
            <li><a>По категории</a></li>
            <li><a>По отзывам</a></li>
            <li><a>Сортировка</a></li>
            <form class="navbar-form" role="search">
                <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" name="q">
                <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
                </div>
            </form>
            <li><a>Reviews <span class="badge">5000</span></a></li>
          </ul>
        </div>
      </div>
    </div>

</div>
<div class="col-xs-10 col-sm-10 col-md-9 col-lg-9 pull-right">
<div class="row">
@foreach (var item in Model) {
<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
    <div class="hovereffect">
        <img class="img-responsive" src="@item.ImgRes" >
        <div class="overlay">
                <h2>@item.Name</h2>
				<p>
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> 
				</p>
        </div>
    </div>
    <div  class="text-center">
    <label>
        @Html.DisplayFor(modelItem => item.Name)
    </label>
    </div>
    <div>
        @Html.DisplayFor(modelItem => item.Category)
    </div>
    <div>
        @Html.DisplayFor(modelItem => item.TelNumber)
    </div>
    <div>
        @Html.DisplayFor(modelItem => item.Discription)
    </div>
    <div>
        @Html.DisplayFor(modelItem => item.Price)
    </div>
        @if (ViewContext.HttpContext.User.IsInRole("Admin") || ViewContext.HttpContext.User.IsInRole("Menager"))
        {
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
        }
        <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
        @if (ViewContext.HttpContext.User.IsInRole("Admin"))
        {
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        }
        <div class="text-center">
            <input type="button" class="btn btn-primary" value="Выбрать">
        </div>
</div>
}
</div>
</div>
</div>